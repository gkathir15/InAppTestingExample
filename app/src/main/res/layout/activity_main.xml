<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/hello"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.147"/>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Check for Flexible Update"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="120dp"
            app:layout_constraintHorizontal_bias="0.515"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check For Immediate Update"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintHorizontal_bias="0.562"
            android:id="@+id/update2" app:layout_constraintTop_toBottomOf="@+id/camera"/>
    <Button
            android:text="Dynamic Bundle"
            android:layout_width="138dp"
            android:layout_height="64dp"
            android:id="@+id/camera"
            app:layout_constraintBottom_toTopOf="@+id/update2" android:layout_marginTop="400dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Asset Loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assetAct"
            app:layout_constraintStart_toStartOf="@+id/camera"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/camera"/>

</androidx.constraintlayout.widget.ConstraintLayout>