<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="40sp"
            android:id="@+id/hello"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.252"/>


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/update"
            android:text="Check for Update"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="89dp"/>
    <Button
            android:text="Try CameraX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camerax"
            app:layout_constraintStart_toStartOf="@+id/update"
            android:layout_marginStart="16dp" android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toTopOf="@+id/update" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hello" app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>